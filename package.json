{
    "name": "autolinting-for-javascript",
    "displayName": "Autolinting for Javascript",
    "description": "Automatically activate the correct Javascript linter for your workspace",
    "version": "0.0.1",
    "publisher": "t-sauer",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:.jshintrc",
        "workspaceContains:.eslintrc",
        "workspaceContains:.jscsrc"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "extension.setLinter",
            "title": "Autoactivate Javascript linter"
        }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.3",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "extensionDependencies": [
        "dbaeumer.vscode-eslint",
        "ms-vscode.jscs",
        "dbaeumer.jshint"
    ]
}
